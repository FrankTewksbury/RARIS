# Environment: development | staging | production
ENVIRONMENT=development

# Database
POSTGRES_DB=raris
POSTGRES_USER=raris
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://raris:changeme@localhost:5432/raris

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Provider: openai | anthropic | gemini
LLM_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
# For discovery runs requiring high recall, use:
# ANTHROPIC_MODEL=claude-opus-4-6-20250514
GEMINI_API_KEY=
GEMINI_MODEL=gemini-3.1-pro-preview
GEMINI_THINKING_BUDGET=24576
# 3-step fallback: Pro (full thinking) -> Pro (no thinking) -> Flash
GEMINI_FALLBACK_MODELS=gemini-3.1-pro-preview,gemini-3.1-pro-preview:no-think,gemini-3.1-flash-preview

# Rate Limiting (requests per minute, 0 = disabled)
RATE_LIMIT_RPM=60

# Auth (set to true to require API keys)
AUTH_ENABLED=false

# Scheduler (set to true for background jobs)
SCHEDULER_ENABLED=false
MONITOR_SCHEDULE_HOUR=2
SNAPSHOT_SCHEDULE_HOUR=3

# Logging
LOG_LEVEL=INFO
